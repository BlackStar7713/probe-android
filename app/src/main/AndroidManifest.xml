<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.openobservatory.ooniprobe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".ooniprobeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.InformedConsentActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".utils.AlarmReceiver"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.INTERNET" />
        <receiver
            android:name=".utils.OnBootReceiver"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.BrowserActivity"
            android:theme="@style/FullScreen"
            android:label="">
            <intent-filter>
                <action android:name="org.openobservatory.ooniprobe.OPEN_BROWSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.NotificationDialog"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".activity.RunTestActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <action android:name="org.openobservatory.ooniprobe.nettest" />
                <data android:scheme="https"
                    android:host="run.ooni.io"
                    android:pathPrefix="/nettest" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <action android:name="org.openobservatory.ooniprobe.nettest" />
                <data android:scheme="http"
                    android:host="run.ooni.io"
                    android:pathPrefix="/nettest" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="ooni"
                    android:host="nettest" />
            </intent-filter>
        </activity>

    </application>
</manifest>
