<resources>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App">
		<item name="colorPrimary">@color/color_base</item>
		<item name="colorAccent">@color/color_base</item>
		<item name="colorPrimaryDark">@color/color_blue6</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
		<item name="fontFamily">@font/firasans</item>
		<item name="android:textColor">@color/color_gray9</item>
	</style>

	<style name="Theme.MaterialComponents.NoActionBar.App">
		<item name="colorPrimary">@color/color_base</item>
		<item name="colorPrimaryDark">@color/color_blue6</item>
		<item name="colorAccent">@color/color_white</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
		<item name="fontFamily">@font/firasans</item>
		<item name="android:textColor">@color/color_white</item>
	</style>

	<style name="Theme.MaterialComponents.Light.App">
		<item name="colorPrimary">@color/color_gray4</item>
		<item name="colorAccent">@color/color_base</item>
		<item name="colorPrimaryDark">@color/color_gray6</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
		<item name="fontFamily">@font/firasans</item>
	</style>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App.NoActionBar.Websites">
		<item name="colorPrimary">@color/color_indigo6</item>
		<item name="colorPrimaryDark">@color/color_indigo9</item>
	</style>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App.NoActionBar.InstantMessaging">
		<item name="colorPrimary">@color/color_cyan6</item>
		<item name="colorPrimaryDark">@color/color_cyan9</item>
	</style>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App.NoActionBar.MiddleBoxes">
		<item name="colorPrimary">@color/color_violet8</item>
		<item name="colorPrimaryDark">@color/color_violet9</item>
	</style>

	<style name="Theme.MaterialComponents.Light.DarkActionBar.App.NoActionBar.Performance">
		<item name="colorPrimary">@color/color_fuchsia6</item>
		<item name="colorPrimaryDark">@color/color_fuchsia9</item>
	</style>

	<style name="Theme.MaterialComponents.NoActionBar.App.Websites">
		<item name="colorPrimary">@color/color_indigo6</item>
		<item name="colorPrimaryDark">@color/color_indigo9</item>
		<item name="android:windowBackground">@color/color_indigo6</item>
	</style>

	<style name="Theme.MaterialComponents.NoActionBar.App.InstantMessaging">
		<item name="colorPrimary">@color/color_cyan6</item>
		<item name="colorPrimaryDark">@color/color_cyan9</item>
		<item name="android:windowBackground">@color/color_cyan6</item>
	</style>

	<style name="Theme.MaterialComponents.NoActionBar.App.MiddleBoxes">
		<item name="colorPrimary">@color/color_violet8</item>
		<item name="colorPrimaryDark">@color/color_violet9</item>
		<item name="android:windowBackground">@color/color_violet8</item>
	</style>

	<style name="Theme.MaterialComponents.NoActionBar.App.Performance">
		<item name="colorPrimary">@color/color_fuchsia6</item>
		<item name="colorPrimaryDark">@color/color_fuchsia9</item>
		<item name="android:windowBackground">@color/color_fuchsia6</item>
	</style>

	<style name="Theme.MaterialComponents.Light.Transparent">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:fontFamily">@font/firasans</item>
	</style>

	<style name="TextAppearance.AppCompat.Small.Transparent">
		<item name="android:textColor">@android:color/transparent</item>
	</style>
</resources>
