<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="90dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:divider="@drawable/divider"
		android:dividerPadding="8dp"
		android:orientation="horizontal"
		android:showDividers="middle"
		android:theme="@style/Theme.MaterialComponents.NoActionBar.App"
		android:baselineAligned="false">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Summary_Performance_Hero_Video" />

			<TextView
				android:id="@+id/video"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Summary_Performance_Hero_Video_Quality" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Summary_Performance_Hero_Upload" />

			<TextView
				android:id="@+id/upload"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:id="@+id/uploadUnit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Summary_Performance_Hero_Download" />

			<TextView
				android:id="@+id/download"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:id="@+id/downloadUnit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Summary_Performance_Hero_Ping" />

			<TextView
				android:id="@+id/ping"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_ms" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
