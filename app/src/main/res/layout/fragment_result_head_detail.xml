<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="90dp"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:paddingHorizontal="16dp"
	android:theme="@style/Theme.MaterialComponents.NoActionBar.App">

	<LinearLayout
		android:id="@+id/dataUsage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/data_usage"
			android:drawablePadding="4dp"
			android:text="@string/TestResults_Summary_Hero_DataUsage" />

		<TextView
			android:id="@+id/upload"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableStart="@drawable/upload_white"
			android:drawablePadding="4dp" />

		<TextView
			android:id="@+id/download"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableStart="@drawable/download_white"
			android:drawablePadding="4dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/dateTime"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/date_and_time"
			android:drawablePadding="4dp"
			android:text="@string/TestResults_Summary_Hero_DateAndTime" />

		<TextView
			android:id="@+id/startTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/runtimeLabel"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/runtime"
			android:drawablePadding="4dp" />

		<TextView
			android:id="@+id/runtime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/globe_18dp"
			android:drawablePadding="4dp"
			android:text="@string/TestResults_Summary_Hero_Country" />

		<TextView
			android:id="@+id/country"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableStart="@drawable/network"
			android:drawablePadding="4dp"
			android:text="@string/TestResults_Summary_Hero_Network" />

		<TextView
			android:id="@+id/network"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>