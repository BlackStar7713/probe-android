<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/test_logo"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/http_invalid_request_line_big"
            android:layout_marginTop="10dp"
            android:layout_height="64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testDesc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="@string/http_invalid_request_line_longdesc"
            android:textColor="@color/color_off_black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/learn_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn_more"
                app:textAllCaps="false"
                android:textColor="@color/color_ooni_blue"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/run_test_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:text="@string/run"
                app:textAllCaps="false"
                android:textColor="@color/color_off_white"
                android:background="@drawable/nextbutton"
                android:layout_below="@+id/learn_more_button"
                android:layout_centerHorizontal="true" />

            <ProgressBar
                android:id="@+id/progressIndicator"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/learn_more_button"
                android:layout_alignRight="@+id/learn_more_button"
                android:layout_alignEnd="@+id/learn_more_button"
                android:layout_alignLeft="@+id/learn_more_button"
                android:layout_alignStart="@+id/learn_more_button" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>