<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/dialog_wrong"
	android:orientation="vertical">

	<TextView
		android:id="@+id/actually"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:gravity="center"
		android:text="@string/Onboarding_PopQuiz_1_Wrong_Title"
		android:textColor="@color/color_white"
		android:textSize="32sp"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_gravity="center_vertical"
		android:background="@color/color_white"/>

	<TextView
		android:id="@+id/wrongAsnwer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="30dp"
		android:text="@string/Onboarding_PopQuiz_1_Wrong_Paragraph"
		android:textColor="@color/color_white"
		android:textSize="18sp"
		android:textStyle="bold"/>

	<LinearLayout
		android:id="@+id/lnextButtonLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:weightSum="1.0">

		<Button
			android:id="@+id/backButton"
			android:layout_width="0dp"
			android:layout_height="55dp"
			android:layout_weight="0.5"
			android:background="@drawable/button_back"
			android:padding="10dp"
			android:text="@string/Onboarding_PopQuiz_Wrong_Button_Back"
			android:textColor="@color/color_white"
			android:textSize="20sp"
			android:textStyle="bold"/>

		<Button
			android:id="@+id/continueButton"
			android:layout_width="0dp"
			android:layout_height="55dp"
			android:layout_weight="0.5"
			android:background="@drawable/button_continue"
			android:padding="10dp"
			android:text="@string/Onboarding_PopQuiz_Wrong_Button_Continue"
			android:textColor="@color/color_gray8"
			android:textSize="20sp"
			android:textStyle="bold"/>
	</LinearLayout>
</LinearLayout>