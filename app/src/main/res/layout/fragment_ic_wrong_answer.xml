<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray7">

    <TextView
        android:id="@+id/actually"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actually"
        android:layout_marginTop="10dp"
        android:textSize="32sp"
        android:textColor="@color/color_white"
        android:gravity="center" />


    <TextView
        android:id="@+id/wrongAsnwer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actually"
        android:layout_marginBottom="10dp"
        android:text="@string/question_1_wrong"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:gravity="center"  />

    <ImageView
        android:id="@+id/octopus_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ooniprobe_logo"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/wrongAsnwer" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity = "center_horizontal"
        android:id="@+id/lnextButtonLayout"
        android:layout_marginBottom="12dp"
        android:weightSum="1.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.4"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="@string/go_back"
            android:textColor="@color/color_white"
            android:background="@drawable/button_back" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="0.4"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="@string/_continue"
            android:textColor="@color/color_gray8"
            android:background="@drawable/button_continue" />
    </LinearLayout>
</RelativeLayout>