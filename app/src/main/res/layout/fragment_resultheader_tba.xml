<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:divider="@color/color_white"
		android:orientation="horizontal"
		android:showDividers="middle"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Overview_Websites_Tested_Singular"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

			<TextView
				android:id="@+id/tested"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:id="@+id/testedLabel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Overview_Websites_Blocked_Singular"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

			<TextView
				android:id="@+id/blocked"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:id="@+id/blockedLabel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/TestResults_Overview_InstantMessaging_Available_Singular"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

			<TextView
				android:id="@+id/available"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Large" />

			<TextView
				android:id="@+id/availableLabel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
